{
  "name": "doekenorg/decorate-php",
  "description": "Create a PHP decorator or proxy based on an interface or (abstract) class.",
  "type": "composer-plugin",
  "require": {
    "php": "^8.1",
    "composer-plugin-api": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "composer/composer": "^2.0",
    "phpstan/phpstan": "^1.10"
  },
  "license": "GPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "DoekeNorg\\DecoratePhp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DoekeNorg\\DecoratePhp\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Doeke Norg",
      "email": "mail@doeken.org",
      "homepage": "https://doeken.org"
    }
  ],
  "extra": {
    "class": "DoekeNorg\\DecoratePhp\\Composer\\Plugin",
    "plugin-optional": true
  }
}
